<div class="container">
    <div class="col-9">
        {{#with photoDetails}}
        <div class="card">
            <div class="top">
                <div class="userDetails">
                    <!-- Link to User Profile Details Page-->
                    <div>
                        <div class="profilepic">
                            <div class="profile_img">
                                <div class="image">
                                    <img src="/static/images/person.png" alt="img8">
                                </div>
                            </div>
                        </div>
                    </div>
                    <h3>

                        <!-- Link to User Profile Details Page -->
                        <p>
                            <!-- User's username -->
                            {{!-- {{photoDetails.owner.username}} --}}
                            {{owner.username}}
                        </p>
                        <!-- photo's location -->
                        <span>{{location}}</span>

                        <!-- IF the viewer is the creator of the photo -->
                        {{#if isOwner}}
                        <div class="edit-delete-btns">

                            <!-- Edit Pet Photo -->
                            <a href="/edit/{{_id}}">
                                <img class="edit-img" src="/static/images/edit-pen-icon-6.jpg" alt="edit button">
                            </a>

                            <!--Delete Pet Photo -->
                            <a href="/delete/{{_id}}">
                                <img class="bin-img" src="/static/images/icon-remove-22.jpg" alt="bin button">
                            </a>
                        </div>
                        {{/if}}
                    </h3>
                </div>

            </div>

            <!-- Start Pet Photo -->
            <div class="imgBx">
                <!-- Pet Photo -->
                <img src="{{imageUrl}}" alt="{{name}}" class="cover">
            </div>



            <div class="bottom">

                <p class="message">
                    <b class="petDescription">{{description}}</b>
                </p>


                <!-- Photo description -->
                <div class="pet-details">
                    <p class="petName">Name: {{name}}</p>
                    <p class="petAge">Age: {{age}}</p>
                </div>
                <div class="comments">
                    <div class="comments-top">
                        {{!-- {{#each photoDetails.commentList}} --}}
                        {{#each commentList}}
                        <div class="userDetails">
                            <div class="comment-data">
                                <div class="profilepic">
                                    <div class="profile_img">
                                        <div class="image">
                                            <!-- User Profile Image -->
                                            <img src="/static/images/person.png" alt="img8">
                                        </div>
                                    </div>
                                </div>
                                <!--User's username-->
                                <p><b>{{userID.username}}</b>- {{comment}}</p>
                            </div>
                        </div>
                        {{/each}}

                    </div>
                </div>
            </div>

            {{#if canComment}}
            <div class="addComments">
                <!-- Start Add Comments Form -->
                <form method="post">
                    <textarea id="comment-textarea" name="comment" required cols="40" rows="10" placeholder="Add comment..."></textarea>
                    <!-- Post Comments Button -->
                    <button type="submit">Post</button>
                </form>
            </div>
            {{/if}}
        </div>
    </div>
    {{/with}}

</div>