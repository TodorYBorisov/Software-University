<main>
    <!-- Edit Page -->
    <section id="create-section">

        <h1 class="item">Edit Auction</h1>

        <div class="item padded align-center">

            <form class="layout left large" method="post">

                <div class="col aligned">
                    <label>
                        <span>Title</span>
                        <input type="text" name="title" value="{{auctions.title}}"></label>
                    <label>
                        <span>Category</span>
                        <select name="category">
                            {{#select auctions.category}}
                            <option value="Real Estate">Real Estate</option>
                            <option value="Vehicles">Vehicles</option>
                            <option value="Furniture">Furniture</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Other">Other</option>
                            {{/select}}
                        </select>
                    </label>
                    <label>
                        <span>Image URL</span>
                        <input type="text" name="imageUrl" value="{{auctions.imageUrl}}">
                    </label>

                    <label>
                        <span>Starting price</span>
                        {{#if auctions.hasBidder}}
                        <!-- If the current auction has a bidder, this input field should be disabled -->
                        <input type="number" name="price" value="{{auctions.price}}" disabled>
                        {{else}}
                        <input type="number" name="price" value="{{auctions.price}}">
                        {{/if}}
                    </label>
                </div>

                <div class="content pad-med align-center vertical">
                    <label>
                        <span>Description</span>
                        <textarea name="description">{{auctions.description}}</textarea>
                    </label>

                    <div class="align-center">
                        <input class="action" type="submit" value="Update Listing">
                    </div>
                </div>

            </form>

        </div>

    </section>

</main>