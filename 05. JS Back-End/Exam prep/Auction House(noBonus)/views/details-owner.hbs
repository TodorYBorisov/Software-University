<!-- Details Page - Auction owner -->
<section id="catalog-section">
    <h1 class="item">
        
        {{auctions.title}}

    {{#if user}}
        {{#if auctions.isOwner}}
        <div class="f-right">
            <a class="action pad-small f-left" href="/auctions/{{auctions._id}}/edit">Edit</a>
            <a class="action pad-small f-left" href="/auctions/{{auctions._id}}/delete">Delete</a>
        </div>
        {{/if}}
    {{/if}}
    </h1>

    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{auctions.imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{auctions.category}}</strong></p>
                <p>{{auctions.description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{auctions.price}}</strong>
                    </div>

                    <div>
                        {{#if auctions.hasBidder}}
                        <!-- If there is a bidder -->
                        Bid by <strong>{{auctions.highestBidderInfo}}</strong>
                        <!-- # Bonus: If there is a bidder -->
                        <a class="action pad-med cta" href="/auctions/{{auctions._id}}/closed">Close Auction</a>
                        <!-- If there are no bids -->
                        {{else}}
                        No bids
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>

        <footer>Listed by {{auctions.author.firstName}} {{auctions.author.lastName}}</footer>
    </div>

</section>

</main>