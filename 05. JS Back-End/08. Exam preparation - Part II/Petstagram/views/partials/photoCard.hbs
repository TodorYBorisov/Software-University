<div class="card">
    <!-- Start User Details and Image Location -->
    <div class="top">
        <div class="userDetails">
            <!-- {{owner._id}} ако трябва да води към конкретния профил на създателя -->
            <a href="/profile" >  
                <div class="profilepic">
                    <div class="profile_img">
                        <div class="image">
                            <img src="/static/images/person.png">
                        </div>
                    </div>
                </div>
            </a>
            <h3>
                <!-- Link to User Profile Page -->
                <p>{{owner.username}}</p>
                <!-- photo's location -->
                <span>{{location}}</span>
            </h3>
        </div>
    </div>

    <!-- Start Pet Photo -->
    <div class="imgBx">
        <img src="{{imageUrl}}" alt="{{name}}" class="cover">
    </div>
    <!-- Name of Pet -->
    <h5 class="petName">Name: {{name}}</h5>
    <!-- Age of Pet -->
    <h5 class="petAge">Age: {{age}}</h5>
    <!-- Link to Photo Details Page -->
    <a href="/pets/{{_id}}/details" id="see-details">
        <h4 class="details">See details</h4>
    </a>
</div>